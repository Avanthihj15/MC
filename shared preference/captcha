MainActivity.kt
package com.example.captcha


import android.content.Intent
import android.os.Bundle
import android.widget.Button
import android.widget.EditText
import android.widget.TextView
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity


class MainActivity : AppCompatActivity() {


   private lateinit var editTextMobile: EditText
   private lateinit var editTextCaptcha: EditText
   private lateinit var textViewCaptcha: TextView
   private lateinit var buttonSubmit: Button


   override fun onCreate(savedInstanceState: Bundle?) {
       super.onCreate(savedInstanceState)
       setContentView(R.layout.activity_main)


       editTextMobile = findViewById(R.id.editTextMobile)
       editTextCaptcha = findViewById(R.id.editTextCaptcha)
       textViewCaptcha = findViewById(R.id.textViewCaptcha)
       buttonSubmit = findViewById(R.id.buttonSubmit)


       // Generate a random captcha
       val captcha = generateRandomCaptcha()
       textViewCaptcha.text = captcha


       buttonSubmit.setOnClickListener {
           val mobileNumber = editTextMobile.text.toString()
           val enteredCaptcha = editTextCaptcha.text.toString()


           if (validateMobileNumber(mobileNumber) && captcha == enteredCaptcha) {
               val intent = Intent(this, MainActivity2::class.java)
               intent.putExtra("MOBILE_NUMBER", mobileNumber)
               startActivity(intent)
           } else {
               Toast.makeText(this, "Invalid Mobile Number or Captcha", Toast.LENGTH_SHORT).show()
           }
       }
   }


   private fun generateRandomCaptcha(): String {
       val chars = "0123456789"
       return (1..6)
           .map { chars.random() }
           .joinToString("")
   }


   private fun validateMobileNumber(mobileNumber: String): Boolean {
       return mobileNumber.length == 10
   }
}


